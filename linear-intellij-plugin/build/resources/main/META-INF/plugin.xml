<idea-plugin>
  <version>1.0.0</version>
  <idea-version since-build="233" until-build="251.*" />
  <id>com.linear.intellij</id>
  <name>Linear Integration</name>
  <vendor email="support@linear.app" url="https://linear.app">Linear</vendor>
  <description><![CDATA[Integrate Linear project management directly into IntelliJ IDEA. 
    View and manage your Linear tasks from a convenient sidebar without leaving your IDE.
    
    Features:
    • View assigned tasks in a sidebar
    • Quick access to task details
    • Filter tasks by status
    • Open tasks in Linear web app]]></description>
  <depends>com.intellij.modules.platform</depends>
  <extensions defaultExtensionNs="com.intellij">
    <toolWindow id="Linear Tasks" secondary="true" icon="/icons/linear.svg" anchor="right" factoryClass="com.linear.intellij.toolwindow.LinearToolWindowFactory" />
    <applicationService serviceImplementation="com.linear.intellij.services.LinearApiService" />
    <applicationService serviceImplementation="com.linear.intellij.settings.LinearSettings" />
    <applicationConfigurable parentId="tools" instance="com.linear.intellij.settings.LinearSettingsConfigurable" id="com.linear.intellij.settings" displayName="Linear" />
  </extensions>
  <actions>
    <action id="com.linear.intellij.actions.RefreshLinearTasks" class="com.linear.intellij.actions.RefreshTasksAction" text="Refresh Linear Tasks" description="Refresh the list of Linear tasks" icon="AllIcons.Actions.Refresh" />
  </actions>
</idea-plugin>
